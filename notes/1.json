      "name": "blur()",
      "description": "用来设置图像的模糊效果。参数为模糊半径（像素）",
      "html": {
        "show": true,
        "use": true,
        "code": [
          { "indent": 0, "value": "<img src='/assets/img/tx.png' alt='' />" },
          {
            "indent": 0,
            "value": "<img class='blur' src='/assets/img/tx.png' alt='' />"
          }
        ]
      },
      "css": {
        "show": true,
        "use": true,
        "code": [
          { "indent": 0, "value": "img {" },
          { "indent": 2, "value": "width: 100px;" },
          { "indent": 2, "value": "height: 100px;" },
          { "indent": 0, "value": "}" },
          { "indent": 0, "value": ".blur {" },
          { "indent": 2, "value": "filter: blur(5px); /* 5像素的模糊*/" },
          { "indent": 0, "value": "}" }
        ]
      }
